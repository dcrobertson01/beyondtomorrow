{% extends 'docs.html.twig' %}

{% block content %}
	<div id="timeline">
    	<div id="body-inner">
			<p>
				{{ page.content|raw }}
			</p>
			{% for p in page.collection %}
				<h2><a href="{{ p.url|e }}">{{ p.title|e }}</a></h2>
				{{ p.header.event.start_date|date(system.pages.dateformat.short) }}
				{% if p.header.event.end_date %}
					â€” 	{{ p.header.event.end_date|date(system.pages.dateformat.short) }}
				{% endif %}
				{{ p.summary|raw }}
			{% endfor %}
		</div>
    </div>
{% endblock %}
